@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Kişisel Veri";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>Hesabınızda bize verdiğiniz kişisel veriler var. Bu sayfa bu verileri indirmenize veya silmenize olanak tanır.</p>
        <p>
            <strong>
                Bu verilerin silinmesi hesabınızı kalıcı olarak kaldıracaktır ve bu kurtarılamaz.
            </strong>
        </p>
        <form asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-default" type="submit">İndir</button>
        </form>
        <p>
            <a asp-page="DeletePersonalData" class="btn btn-default">Sil</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}