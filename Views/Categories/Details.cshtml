<h3 class="aside-title">@Model.Name</h3>

<div id="breadcrumb">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">@Model.Name</li>
        </ul>
    </div>
</div>

<div class="store-filter clearfix">
    <div class="pull-left">
        <div class="row-filter">
            <a href="#"><i class="fa fa-th-large"></i></a>
            <a href="#" class="active"><i class="fa fa-bars"></i></a>
        </div>
        <div class="sort-filter">
            <span class="text-uppercase">Sort By:</span>
            <select class="input">
                <option value="0">Position</option>
                <option value="0">Price</option>
                <option value="0">Rating</option>
            </select>
            <a href="#" class="main-btn icon-btn"><i class="fa fa-arrow-down"></i></a>
            <span class="text-uppercase">@Model.Shoes.Count Adet ayakkabı bulundu.</span>
        </div>
    </div>
    <div class="pull-right">
        <div class="page-filter">
            <span class="text-uppercase">Show:</span>
            <select class="input">
                <option value="0">10</option>
                <option value="1">20</option>
                <option value="2">30</option>
            </select>
        </div>
        <ul class="store-pages">
            <li><span class="text-uppercase">Page:</span></li>
            <li class="active">1</li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#"><i class="fa fa-caret-right"></i></a></li>
        </ul>
    </div>
</div>
@foreach (var shoe in Model.Shoes)
{
    <div class="section">

        <div class="container">
            <div class="row">
                <div id="main" class="col-md-9">
                    <div id="store">
                        <div class="row">
                            <div class="col-md-4 col-sm-6 col-xs-6">
                                <div class="product product-single">
                                    <div class="product-thumb">
                                        @{
                                            var imageUrl = shoe.ShoeImages?.FirstOrDefault()?.FileName ?? "noimage.png";
                                        }
                                        <button class="main-btn quick-view"><i class="fa fa-search-plus"></i> Hızlı Bak</button>
                                        <img src="~/UserImages/@imageUrl" width="300" height="200" alt="">
                                    </div>
                                    <div class="product-body">
                                        <h3 class="product-price">@shoe.Price</h3>
                                        <div class="product-rating">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star-o empty"></i>
                                        </div>
                                        <h2 class="product-name"><a href="#"> @shoe.Name</a></h2>
                                        <div class="product-btns">
                                            <button class="main-btn icon-btn"><i class="fa fa-heart"></i></button>
                                            <button class="primary-btn add-to-cart"><i class="fa fa-shopping-cart"></i> Sepete Ekle</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix visible-sm visible-xs"></div>
                </div>
            </div>
        </div>
    </div>
}

